{
  "name": "@southbanksoftware/dbkoda-controller",
  "gitName": "dbkoda-controller",
  "fullName": "dbKoda Controller",
  "description": "dbKoda Controller built with state of the art Feathers stack",
  "version": "0.5.0",
  "author": {
    "name": "Southbank Software",
    "email": "developer@southbanksoftware.com",
    "url": "http://southbanksoftware.com"
  },
  "main": "lib/",
  "keywords": [
    "feathers",
    "mongodb",
    "shell",
    "api"
  ],
  "engines": {
    "node": ">= 7.2.1"
  },
  "scripts": {
    "postinstall": "yarn run clean && yarn run build",
    "dev": "yarn run clean && yarn run dev:build && yarn start --",
    "dev:install": "yarn install --ignore-scripts",
    "dev:build": "yarn run build -- --source-maps",
    "start": "node lib/",
    "debug": "node --nolazy --debug-brk=5858 lib",
    "clean": "rimraf lib controller-dev.log",
    "build": "babel --ignore mongoScripts -d lib/ src/ && node bin/combineJavascripts.js",
    "build:sourcemaps": "babel --ignore mongoScripts --source-maps -d lib/ src/",
    "combine-mongo-scripts": "",
    "test": "yarn run eslint && yarn run istanbul",
    "test:dev": "yarn run istanbul && yarn run eslint",
    "rtest": "yarn run istanbul",
    "eslint": "eslint --ignore-pattern src/mongoScripts src/. tests/.",
    "mocha": "rimraf data && yarn run test:unit && yarn run test:integration",
    "test:integration": "NODE_PATH=./src/ NODE_ENV=test mocha tests/integration/ --opts mocha.opts -t 20000",
    "test:unit": "NODE_PATH=./src/ NODE_ENV=test mocha tests/unit/ --opts mocha.opts",
    "test:integration:win": "mocha tests/integration/ --opts mocha.opts -t 20000",
    "test:unit:win": "mocha tests/unit/ --opts mocha.opts",
    "test:win": "yarn test:integration:win && yarn test:unit:win",
    "coverage": "yarn run istanbul && open -b com.google.chrome coverage/lcov-report/index.html",
    "istanbul": "rimraf coverage data && NODE_PATH=./src/ NODE_ENV=test istanbul cover _mocha tests/unit tests/integration -- -t 20000 --opts mocha.opts",
    "docs": "yarn run esdoc && open -b com.google.chrome ./docs/index.html",
    "esdoc": "rimraf docs && esdoc -c .esdoc.json",
    "cienvy:dev": "yarn run cienvy:clean && yarn run cienvy:dev:build",
    "cienvy:dev:build": "yarn run cienvy:build -- --source-maps",
    "cienvy:clean": "rimraf .cienvy/lib",
    "cienvy:build": "BABEL_ENV=cienvy babel -d .cienvy/lib .cienvy/src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SouthbankSoftware/dbkoda-controller.git"
  },
  "license": "AGPL-3.0",
  "private": true,
  "bugs": {
    "url": "https://github.com/SouthbankSoftware/dbkoda-controller/issues"
  },
  "homepage": "https://github.com/SouthbankSoftware/dbkoda-controller#readme",
  "dependencies": {
    "ajv": "^5.0.0",
    "body-parser": "^1.15.2",
    "chokidar": "^1.7.0",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "crypto-js": "^3.1.9-1",
    "debug": "^2.6.0",
    "eslint": "^3.19.0",
    "feathers": "^2.1.1",
    "feathers-client": "^1.9.0",
    "feathers-configuration": "^0.4.1",
    "feathers-errors": "^2.6.3",
    "feathers-hooks": "^2.0.0",
    "feathers-hooks-common": "^3.0.0",
    "feathers-primus": "2.1.0",
    "feathers-rest": "^1.5.2",
    "feathers-swagger": "^0.3.2",
    "generic-pool": "^3.1.6",
    "js-yaml": "^3.8.3",
    "lodash": "^4.17.2",
    "moment": "^2.18.1",
    "mongodb": "^2.2.16",
    "mongodb-uri": "^0.9.7",
    "node-pty": "^0.6.3",
    "node-queue-lib": "0.0.28",
    "node-uuid": "^1.4.8",
    "openport": "0.0.4",
    "passport": "^0.3.2",
    "prom-client": "^9.1.1",
    "prometheus-gc-stats": "^0.4.0",
    "queue": "^4.2.1",
    "request-promise": "^4.2.1",
    "rss-parser": "^2.7.0",
    "serve-favicon": "^2.3.2",
    "shelljs": "^0.7.6",
    "strip-ansi": "^3.0.1",
    "winston": "^2.3.0",
    "winston-daily-rotate-file": "^1.4.6",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-root-import": "^5.0.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.16.0",
    "esdoc": "^0.5.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "request": "^2.81.0",
    "rimraf": "^2.5.4",
    "source-map-support": "^0.4.11",
    "test-utils": "^1.0.12"
  }
}
